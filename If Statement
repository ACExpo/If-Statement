while True:
    try:
        weight = int(input("What is your weight? "))
        while True:
            try:
                weight_kgs_lbs = input("Which unit did you input? \nType k for Kg or l for Lb ")
                if weight_kgs_lbs == "k":
                    weight_kgs_lbs = ("Kg")
                    print ("Your weight:", weight, weight_kgs_lbs)
                    y = int(weight * 2.20462)
                    print("Your weight in Lbs:", y, "Lbs")
                    print("That's awesome!")
                    break
                elif weight_kgs_lbs == "l":
                    weight_kgs_lbs = ("Lb")
                    print ("Your weight:", weight, weight_kgs_lbs)
                    z = int(weight * 0.45)
                    print("Your weight in Kgs:", z, "Kgs")
                    print("That's awesome!")
                    break
            except:
                print("Try again")
        break
    except:
        print("Let's try again.\n")
